<div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
        <form action="addblog" method="post">
            <div class="form-group">
                <label for="text">Title of this blog post:</label>
                <input type="text" class="form-control" name="title" placeholder="title">
            </div>
            <div class="form-group">
                <label for="text">Path:</label>
                <input type="text" class="form-control" name="path" placeholder="path">
            </div>
            <div class="form-group">
                <label for="text">Keywords:</label>
                <input type="text" class="form-control" name="keywords" placeholder="keywords">
            </div>
            <div class="form-group">
                <label for="text">Choreographer:</label>
                <input type="text" class="form-control" name="choreographer" placeholder="choreographer">
            </div>
            <div class="form-group">
                <label for="text">Blog summary - short like a tweet:</label>
                <input type="text" class="form-control" name="summary" placeholder="summary">
            </div>
            <div class="form-group">
                <label for="text">The full text of your blog post:</label>
                <input type="text" class="form-control" name="text" placeholder="your text">
            </div>
            <div class="form-group">
                <label for="text"> The link to your image:</label>
                <input type="text" class="form-control" name="image" placeholder="image url">
            </div>
            <div class="form-group">
                <label for="text">Video (youtube code)</label>
                <input type="text" class="form-control" name="video" placeholder="video">
            </div>
            <button type="submit" class="btn btn-default">Add new blog post.</button>
        </form>
    </div>
    <div class="col-sm-1"></div>
</div>

